    <script>
        window.onload = () => {
            let progress = document.getElementById('progressbar')
            let totalHeight = document.body.scrollHeight - window.innerHeight
            window.onscroll = () => {
                let progressHeight = (window.pageYOffset / totalHeight) * 100
                progress.style.height = progressHeight + '%'
            }
            if (window.innerWidth <= 993) {
                document.getElementsByTagName("body")[0].style.padding = 0
            }
        }

    </script>
    <script src='//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js'></script>
    <script>

        $(document).ready(function () {
            $('#global').DataTable({
                paging: false
            });

            var $tr = $('#usa tr.no-sort');
            var mySpecialRow = $tr.prop('outerHTML');
            $('#usa').DataTable({
                "fnDrawCallback": function () {
                    //add the row with 'prepend' method: in the first children of TBODY
                    $('#usa tbody').prepend(mySpecialRow);

                },
                paging: false
            });
            $(document).ready(function () {
                $('#dtDynamicVerticalScrollExample').DataTable({
                    "scrollY": "75vh",
                    "scrollCollapse": true,
                    paging: false
                });
                $('#dtDynamicVerticalScrollExample2').DataTable({
                    "scrollY": "75vh",
                    "scrollCollapse": true,
                    paging: false
                });
                $('.dataTables_length').addClass('bs-select');
                $("table").css({ "width": "93% !important", "margin": "auto !important" })

                if (window.innerWidth < 992) {
                    var tBodyEle = document.getElementsByClassName("dataTables_scrollBody");
                    var tHeadInnr = document.getElementsByClassName("dataTables_scrollHeadInner");
                    for (i = 0; i < tBodyEle.length; i++) {
                        style = window.getComputedStyle(tHeadInnr[i]);
                        wdt = style.getPropertyValue('width');
                        tBodyEle[i].style.width = wdt + ' !important';
                        tBodyEle[i].style.setProperty("width", wdt, "important");
                    }
                }
            });
        });
    </script>

